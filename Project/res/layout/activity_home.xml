<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/aswi_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:orientation="vertical"
    tools:context="com.allinthesoft.openweather.module.activity.home.HomeActivity" >

    <AutoCompleteTextView
        android:id="@+id/city_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="@string/city_search"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:maxLines="1"
        android:text="" >
    </AutoCompleteTextView>

    <ImageView
        android1:id="@+id/ah_localisation"
        android1:layout_width="50dp"
        android1:layout_height="50dp"
        android1:layout_below="@+id/city_search"
        android1:layout_centerHorizontal="true"
        android1:src="@drawable/localisation" />

    <ListView
        android1:id="@+id/list_city"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/city_search"
        android1:layout_below="@+id/ah_localisation" >
    </ListView>

</RelativeLayout>